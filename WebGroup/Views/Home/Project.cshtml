    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Breamcrumb Content -->

            </div>
        </div>
    </div>
</section>
<!-- ***** Breadcrumb Area End ***** -->
<!-- ***** Portfolio Area Start ***** -->
<!-- ***** Portfolio Area Start ***** -->
<section id="portfolio" class="portfolio-area overflow-hidden ptb_100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-7">
                <!-- Section Heading -->
                <div class="section-heading text-center">
                    <h1>Наши работы</h1>
                    <p class="d-none d-sm-block mt-4">Наши курсовые проекты и прочее</p>
                    <p class="d-block d-sm-none mt-4">Список проектов</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center text-center">
            <div class="col-12">
                <!-- Portfolio Menu -->
                <div class="portfolio-menu btn-group btn-group-toggle flex-wrap justify-content-center text-center mb-4 mb-md-5" data-toggle="buttons">
                    <label class="btn active d-table text-uppercase p-2">
                        <input type="radio" value="all" checked class="portfolio-btn">
                        <span>Все</span>
                    </label>
                    <label class="btn d-table text-uppercase p-2">
                        <input type="radio" value="1" class="portfolio-btn">
                        <span>Курсовые</span>
                    </label>
                    <label class="btn d-table text-uppercase p-2">
                        <input type="radio" value="2" class="portfolio-btn">
                        <span>Дипломные</span>
                    </label>
                    <label class="btn d-table text-uppercase p-2">
                        <input type="radio" value="3" class="portfolio-btn">
                        <span>Прочее</span>
                    </label>



                </div>
            </div>
        </div>
        <!-- Portfolio Items -->
        <div class="row items portfolio-items">
            @foreach (var item in Model.Item1)
            {
                <div class="col-12 col-sm-6 col-lg-4 portfolio-item" data-groups='["@item.Type"]'>
                    <!-- Single Case Studies -->
                    <div class="single-case-studies">
                        <!-- Case Studies Thumb -->
                        <a href="#">
                            <img src="~/assets/img/case_studies/case_studies_1/@item.Photo" alt="">
                        </a>
                        <!-- Case Studies Overlay -->
                        <a href="#" class="case-studies-overlay">
                            <!-- Overlay Text -->
                            <span class="overlay-text text-center p-3">
                                <h3 class="text-white mb-3">@item.Name</h3>
                                <h5 class="text-white mb-3">@item.AuthorNavigation.FirstName @item.AuthorNavigation.LastName</h5>
                                <p class="text-white">@item.Title</p>
                            </span>
                        </a>
                    </div>
                </div>
            }


        </div>
        
    </div>
</section>

<!-- ***** Portfolio Area End ***** -->
